<?xml version="1.0" encoding="UTF-8"?>
<project name="module_permissionsystem-example" default="compile.module.permissionsystem-example">
  <dirname property="module.permissionsystem-example.basedir" file="${ant.file.module_permissionsystem-example}"/>
  
  <property name="module.jdk.home.permissionsystem-example" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.permissionsystem-example" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.permissionsystem-example" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.permissionsystem-example" value="-encoding UTF-8 -source 1.5 -target 1.5 ${compiler.args}"/>
  
  <property name="permissionsystem-example.output.dir" value="${module.permissionsystem-example.basedir}/target/classes"/>
  <property name="permissionsystem-example.testoutput.dir" value="${module.permissionsystem-example.basedir}/target/test-classes"/>
  
  <path id="permissionsystem-example.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="permissionsystem-example.module.production.classpath">
    <path refid="${module.jdk.classpath.permissionsystem-example}"/>
    <pathelement location="${permissionsystem-lib.output.dir}"/>
    <path refid="library.maven:_org.mongodb:mongo-java-driver:3.8.0.classpath"/>
    <path refid="library.maven:_net.md-5:bungeecord-chat:1.12-snapshot.classpath"/>
    <path refid="library.maven:_com.google.code.gson:gson:2.8.0.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:20.0.classpath"/>
    <path refid="library.maven:_de.dytanic.cloudnet:cloudnet-api-bridge:2.1.6.classpath"/>
  </path>
  
  <path id="permissionsystem-example.runtime.production.module.classpath">
    <pathelement location="${permissionsystem-example.output.dir}"/>
    <path refid="permissionsystem-lib.runtime.production.module.classpath"/>
    <path refid="library.maven:_org.mongodb:mongo-java-driver:3.8.0.classpath"/>
    <path refid="library.maven:_net.md-5:bungeecord-chat:1.12-snapshot.classpath"/>
    <path refid="library.maven:_com.google.code.gson:gson:2.8.0.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:20.0.classpath"/>
  </path>
  
  <path id="permissionsystem-example.module.classpath">
    <path refid="${module.jdk.classpath.permissionsystem-example}"/>
    <pathelement location="${permissionsystem-example.output.dir}"/>
    <pathelement location="${permissionsystem-lib.testoutput.dir}"/>
    <pathelement location="${permissionsystem-lib.output.dir}"/>
    <path refid="library.maven:_org.mongodb:mongo-java-driver:3.8.0.classpath"/>
    <path refid="library.maven:_net.md-5:bungeecord-chat:1.12-snapshot.classpath"/>
    <path refid="library.maven:_com.google.code.gson:gson:2.8.0.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:20.0.classpath"/>
    <path refid="library.maven:_de.dytanic.cloudnet:cloudnet-api-bridge:2.1.6.classpath"/>
  </path>
  
  <path id="permissionsystem-example.runtime.module.classpath">
    <pathelement location="${permissionsystem-example.testoutput.dir}"/>
    <pathelement location="${permissionsystem-example.output.dir}"/>
    <path refid="permissionsystem-lib.runtime.module.classpath"/>
    <path refid="library.maven:_org.mongodb:mongo-java-driver:3.8.0.classpath"/>
    <path refid="library.maven:_net.md-5:bungeecord-chat:1.12-snapshot.classpath"/>
    <path refid="library.maven:_com.google.code.gson:gson:2.8.0.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:20.0.classpath"/>
    <path refid="library.maven:_de.dytanic.cloudnet:cloudnet-api-bridge:2.1.6.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.permissionsystem-example">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.permissionsystem-example">
    <patternset refid="excluded.from.module.permissionsystem-example"/>
  </patternset>
  
  <path id="permissionsystem-example.module.sourcepath">
    <dirset dir="${module.permissionsystem-example.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  <path id="permissionsystem-example.module.test.sourcepath">
    <dirset dir="${module.permissionsystem-example.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.permissionsystem-example" depends="compile.module.permissionsystem-example.production,compile.module.permissionsystem-example.tests" description="Compile module permissionsystem-example"/>
  
  <target name="compile.module.permissionsystem-example.production" depends="register.custom.compilers,compile.module.permissionsystem-lib" description="Compile module permissionsystem-example; production classes">
    <mkdir dir="${permissionsystem-example.output.dir}"/>
    <javac2 destdir="${permissionsystem-example.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.permissionsystem-example}/javac">
      <compilerarg line="${compiler.args.permissionsystem-example}"/>
      <bootclasspath refid="permissionsystem-example.module.bootclasspath"/>
      <classpath refid="permissionsystem-example.module.production.classpath"/>
      <src refid="permissionsystem-example.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.permissionsystem-example"/>
    </javac2>
    
    <copy todir="${permissionsystem-example.output.dir}">
      <fileset dir="${module.permissionsystem-example.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.permissionsystem-example.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.permissionsystem-example.tests" depends="register.custom.compilers,compile.module.permissionsystem-example.production" description="compile module permissionsystem-example; test classes" unless="skip.tests">
    <mkdir dir="${permissionsystem-example.testoutput.dir}"/>
    <javac2 destdir="${permissionsystem-example.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.permissionsystem-example}/javac">
      <compilerarg line="${compiler.args.permissionsystem-example}"/>
      <bootclasspath refid="permissionsystem-example.module.bootclasspath"/>
      <classpath refid="permissionsystem-example.module.classpath"/>
      <src refid="permissionsystem-example.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.permissionsystem-example"/>
    </javac2>
    
    <copy todir="${permissionsystem-example.testoutput.dir}">
      <fileset dir="${module.permissionsystem-example.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.permissionsystem-example" description="cleanup module">
    <delete dir="${permissionsystem-example.output.dir}"/>
    <delete dir="${permissionsystem-example.testoutput.dir}"/>
  </target>
</project>