<?xml version="1.0" encoding="UTF-8"?>
<project name="module_permissionsystem-lib" default="compile.module.permissionsystem-lib">
  <dirname property="module.permissionsystem-lib.basedir" file="${ant.file.module_permissionsystem-lib}"/>
  
  <property name="module.jdk.home.permissionsystem-lib" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.permissionsystem-lib" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.permissionsystem-lib" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.permissionsystem-lib" value="-encoding UTF-8 -source 1.8 -target 1.8 ${compiler.args}"/>
  
  <property name="permissionsystem-lib.output.dir" value="${module.permissionsystem-lib.basedir}/target/classes"/>
  <property name="permissionsystem-lib.testoutput.dir" value="${module.permissionsystem-lib.basedir}/target/test-classes"/>
  
  <path id="permissionsystem-lib.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="permissionsystem-lib.module.production.classpath">
    <path refid="${module.jdk.classpath.permissionsystem-lib}"/>
    <path refid="library.maven:_org.mongodb:mongo-java-driver:3.8.0.classpath"/>
    <path refid="library.maven:_net.md-5:bungeecord-chat:1.12-snapshot.classpath"/>
    <path refid="library.maven:_com.google.code.gson:gson:2.8.0.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:20.0.classpath"/>
    <path refid="library.maven:_de.dytanic.cloudnet:cloudnet-api-bridge:2.1.6.classpath"/>
  </path>
  
  <path id="permissionsystem-lib.runtime.production.module.classpath">
    <pathelement location="${permissionsystem-lib.output.dir}"/>
    <path refid="library.maven:_org.mongodb:mongo-java-driver:3.8.0.classpath"/>
    <path refid="library.maven:_net.md-5:bungeecord-chat:1.12-snapshot.classpath"/>
    <path refid="library.maven:_com.google.code.gson:gson:2.8.0.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:20.0.classpath"/>
  </path>
  
  <path id="permissionsystem-lib.module.classpath">
    <path refid="${module.jdk.classpath.permissionsystem-lib}"/>
    <pathelement location="${permissionsystem-lib.output.dir}"/>
    <path refid="library.maven:_org.mongodb:mongo-java-driver:3.8.0.classpath"/>
    <path refid="library.maven:_net.md-5:bungeecord-chat:1.12-snapshot.classpath"/>
    <path refid="library.maven:_com.google.code.gson:gson:2.8.0.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:20.0.classpath"/>
    <path refid="library.maven:_de.dytanic.cloudnet:cloudnet-api-bridge:2.1.6.classpath"/>
  </path>
  
  <path id="permissionsystem-lib.runtime.module.classpath">
    <pathelement location="${permissionsystem-lib.testoutput.dir}"/>
    <pathelement location="${permissionsystem-lib.output.dir}"/>
    <path refid="library.maven:_org.mongodb:mongo-java-driver:3.8.0.classpath"/>
    <path refid="library.maven:_net.md-5:bungeecord-chat:1.12-snapshot.classpath"/>
    <path refid="library.maven:_com.google.code.gson:gson:2.8.0.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:20.0.classpath"/>
    <path refid="library.maven:_de.dytanic.cloudnet:cloudnet-api-bridge:2.1.6.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.permissionsystem-lib">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.permissionsystem-lib">
    <patternset refid="excluded.from.module.permissionsystem-lib"/>
  </patternset>
  
  <path id="permissionsystem-lib.module.sourcepath">
    <dirset dir="${module.permissionsystem-lib.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  <path id="permissionsystem-lib.module.test.sourcepath">
    <dirset dir="${module.permissionsystem-lib.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.permissionsystem-lib" depends="compile.module.permissionsystem-lib.production,compile.module.permissionsystem-lib.tests" description="Compile module permissionsystem-lib"/>
  
  <target name="compile.module.permissionsystem-lib.production" depends="register.custom.compilers" description="Compile module permissionsystem-lib; production classes">
    <mkdir dir="${permissionsystem-lib.output.dir}"/>
    <javac2 destdir="${permissionsystem-lib.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.permissionsystem-lib}/javac">
      <compilerarg line="${compiler.args.permissionsystem-lib}"/>
      <bootclasspath refid="permissionsystem-lib.module.bootclasspath"/>
      <classpath refid="permissionsystem-lib.module.production.classpath"/>
      <src refid="permissionsystem-lib.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.permissionsystem-lib"/>
    </javac2>
    
    <copy todir="${permissionsystem-lib.output.dir}">
      <fileset dir="${module.permissionsystem-lib.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.permissionsystem-lib.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.permissionsystem-lib.tests" depends="register.custom.compilers,compile.module.permissionsystem-lib.production" description="compile module permissionsystem-lib; test classes" unless="skip.tests">
    <mkdir dir="${permissionsystem-lib.testoutput.dir}"/>
    <javac2 destdir="${permissionsystem-lib.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.permissionsystem-lib}/javac">
      <compilerarg line="${compiler.args.permissionsystem-lib}"/>
      <bootclasspath refid="permissionsystem-lib.module.bootclasspath"/>
      <classpath refid="permissionsystem-lib.module.classpath"/>
      <src refid="permissionsystem-lib.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.permissionsystem-lib"/>
    </javac2>
    
    <copy todir="${permissionsystem-lib.testoutput.dir}">
      <fileset dir="${module.permissionsystem-lib.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.permissionsystem-lib" description="cleanup module">
    <delete dir="${permissionsystem-lib.output.dir}"/>
    <delete dir="${permissionsystem-lib.testoutput.dir}"/>
  </target>
</project>