<?xml version="1.0" encoding="UTF-8"?>
<project name="module_permissionsystem" default="compile.module.permissionsystem">
  <dirname property="module.permissionsystem.basedir" file="${ant.file.module_permissionsystem}"/>
  
  <property name="module.jdk.home.permissionsystem" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.permissionsystem" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.permissionsystem" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.permissionsystem" value="-encoding UTF-8 -source 1.5 -target 1.5 ${compiler.args}"/>
  
  <property name="permissionsystem.output.dir" value="${module.permissionsystem.basedir}/target/classes"/>
  <property name="permissionsystem.testoutput.dir" value="${module.permissionsystem.basedir}/target/test-classes"/>
  
  <path id="permissionsystem.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="permissionsystem.module.production.classpath">
    <path refid="${module.jdk.classpath.permissionsystem}"/>
    <path refid="library.maven:_net.md-5:bungeecord-chat:1.12-snapshot.classpath"/>
    <path refid="library.maven:_com.google.code.gson:gson:2.8.0.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:20.0.classpath"/>
    <path refid="library.maven:_de.dytanic.cloudnet:cloudnet-api-bridge:2.1.6.classpath"/>
  </path>
  
  <path id="permissionsystem.runtime.production.module.classpath">
    <pathelement location="${permissionsystem.output.dir}"/>
    <path refid="library.maven:_net.md-5:bungeecord-chat:1.12-snapshot.classpath"/>
    <path refid="library.maven:_com.google.code.gson:gson:2.8.0.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:20.0.classpath"/>
  </path>
  
  <path id="permissionsystem.module.classpath">
    <path refid="${module.jdk.classpath.permissionsystem}"/>
    <pathelement location="${permissionsystem.output.dir}"/>
    <path refid="library.maven:_net.md-5:bungeecord-chat:1.12-snapshot.classpath"/>
    <path refid="library.maven:_com.google.code.gson:gson:2.8.0.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:20.0.classpath"/>
    <path refid="library.maven:_de.dytanic.cloudnet:cloudnet-api-bridge:2.1.6.classpath"/>
  </path>
  
  <path id="permissionsystem.runtime.module.classpath">
    <pathelement location="${permissionsystem.testoutput.dir}"/>
    <pathelement location="${permissionsystem.output.dir}"/>
    <path refid="library.maven:_net.md-5:bungeecord-chat:1.12-snapshot.classpath"/>
    <path refid="library.maven:_com.google.code.gson:gson:2.8.0.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:20.0.classpath"/>
    <path refid="library.maven:_de.dytanic.cloudnet:cloudnet-api-bridge:2.1.6.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.permissionsystem">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.permissionsystem">
    <patternset refid="excluded.from.module.permissionsystem"/>
  </patternset>
  
  
  <target name="compile.module.permissionsystem" depends="compile.module.permissionsystem.production,compile.module.permissionsystem.tests" description="Compile module PermissionSystem"/>
  
  <target name="compile.module.permissionsystem.production" depends="register.custom.compilers" description="Compile module PermissionSystem; production classes"/>
  
  <target name="compile.module.permissionsystem.tests" depends="register.custom.compilers,compile.module.permissionsystem.production" description="compile module PermissionSystem; test classes" unless="skip.tests"/>
  
  <target name="clean.module.permissionsystem" description="cleanup module">
    <delete dir="${permissionsystem.output.dir}"/>
    <delete dir="${permissionsystem.testoutput.dir}"/>
  </target>
</project>